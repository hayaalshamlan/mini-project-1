@{
}
@model List<BankBranch>
<style>

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

</style>
<table class=" table">
    <thead>
        <tr>
            <th>Name</th>
            <th>LocationURL</th>
            <th>LocationName</th>
            <th>Bank Manager</th>
            <th>Employee Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var branch in Model)
        {
            <tr>
                <td><a href="@Url.Action("Details", "Bank", new {id = branch.Id})">@branch.Name</a></td>
                <td><a href="@branch.LocationURL">🌎</a></td>
                <td>@branch.LocationName</td>
                <td>@branch.BranchManager</td>
                <td>@branch.EmployeeCount</td>
            </tr>
        }
    </tbody>
</table>